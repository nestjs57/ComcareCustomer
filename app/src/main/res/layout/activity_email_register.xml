<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.comcare.comcarecustomer.LoginAndRegister.EmailRegister"
    android:padding="20dp">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="สมัครสมาชิก"
        android:textAlignment="center"
        android:textColor="#333"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ชื่อผู้ใช้งาน"
        android:textSize="16dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/meterial_ph_white"
        android:ems="10"
        android:hint="กรอกชื่อ"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="อีเมล"
        android:textSize="16dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edtMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="กรอกอีเมล"
        android:textSize="14dp"
        android:background="@drawable/meterial_ph_white"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="รหัสผ่าน"
        android:textSize="16dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edtPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/meterial_ph_white"
        android:ems="10"
        android:hint="กรอกรหัสผ่านเพื่อเข้าสู่ระบบ"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ยืนยันรหัสผ่าน"
        android:textSize="16dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edtConfirmPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/meterial_ph_white"
        android:ems="10"
        android:hint="กรอกรหัสผ่านอีกครั้งเพื่อยืนยัน"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/cardview_dark_background"
        android:onClick="onClickRegister"
        android:text="ยืนยัน"
        android:textColor="#fff" />
</LinearLayout>
