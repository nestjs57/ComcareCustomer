<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.comcare.comcarecustomer.AddDetail"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="อาการปัจจุบัน"
            android:textColor="#333"
            android:textSize="16dp"
            />

        <EditText
            android:id="@+id/edt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/meterial_ph_white"
            android:ems="10"
            android:hint="อาการที่พบ"
            android:maxLength="38"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:text="คำอธิบายเพิ่มเติม"
            android:textColor="#333"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edt2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/meterial_ph_white"
            android:ems="10"
            android:gravity="top"
            android:hint="เครื่องผิดปกติอย่างไร เช่น จอสีฟ้า"
            android:inputType="textMultiLine"
            android:maxHeight="120dp"
            android:maxLength="168"
            android:padding="10dp"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textview3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:text="รูปภาพ"
            android:textColor="#333"
            android:textSize="16dp" />





        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnImage1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/cardview_shadow_start_color"
                    app:srcCompat="@android:drawable/ic_menu_add" />

                <ImageButton
                    android:id="@+id/btnImage2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/cardview_shadow_start_color"
                    app:srcCompat="@android:drawable/ic_menu_add" />

                <ImageButton
                    android:id="@+id/btnImage3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/cardview_shadow_start_color"
                    app:srcCompat="@android:drawable/ic_menu_add" />

                <ImageButton
                    android:id="@+id/btnImage4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/cardview_shadow_start_color"
                    app:srcCompat="@android:drawable/ic_menu_add" />


            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:id="@+id/textview4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:text="ที่อยู่และการติดต่อ"
            android:textColor="#333"
            android:textSize="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:background="#fff">


            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:padding="10dp"
                app:srcCompat="@drawable/map_mark" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="เลือกที่อยู่ปัจจุบันของคุณ"
                android:textColor="#4153b5" />


            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/right_arrow"
                android:padding="12dp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <EditText
            android:id="@+id/edt3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/meterial_ph_white"
            android:ems="10"
            android:gravity="top"
            android:hint="บ้านเลขที่ อาคาร ซอย"
            android:inputType="textMultiLine"
            android:maxHeight="120dp"
            android:maxLength="168"
            android:padding="10dp"
            android:textColor="#333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/meterial_ph_white"
            android:hint="เบอร์โทร"
            android:maxLength="38"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="#333"
            android:textSize="14sp"
            android:inputType="number"/>


        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary"
            android:text="ต่อไป"
            android:textColor="#fff"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>
